{
  "name": "cryptocoins",
  "version": "1.0.0",
  "description": "",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "heroku-postbuild": "yarn run webpack --config webpack/config.prod.js"
  },
  "author": "Pascal Rauser, Philip Lehmann, Joris Morger",
  "license": "ISC",
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "stage-2",
      "react"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "experimentalObjectRestSpread": true,
        "jsx": true
      }
    },
    "plugins": [
      "react",
      "babel"
    ],
    "settings": {
      "react": {
        "pragma": "React"
      }
    },
    "parser": "babel-eslint",
    "rules": {
      "strict": 1,
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "quotes": [
        2,
        "single"
      ],
      "semi": [
        2,
        "never"
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "react-in-jsx-scope": 0,
      "react/prop-types": 0,
      "jsx-uses-react": 0,
      "jsx-uses-vars": 0,
      "default-case": 2,
      "no-warning-comments": [
        "warn",
        {
          "terms": [
            "todo",
            "fixme"
          ],
          "location": "anywhere"
        }
      ]
    }
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.24.1",
    "css-loader": "^0.27.1",
    "eslint": "^3.17.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.10.0",
    "express": "^4.15.4",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "^0.11.1",
    "node-sass": "4.5.0",
    "pg": "^7.4.0",
    "prop-types": "^15.5.8",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "sass-loader": "6.0.3",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "2.5.1",
    "webpack-dev-middleware": "^2.0.3",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1"
  }
}
